<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".activities.TextToAudio">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_margin="20sp"
        android:src="@drawable/backicon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Text to Audio"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/backBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/backBtn"
        app:layout_constraintTop_toTopOf="@id/backBtn" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/generateBtn"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginHorizontal="20sp"
        app:cardBackgroundColor="@color/btnColor"
        app:cardCornerRadius="14sp"
        app:layout_constraintBottom_toTopOf="@id/guideLine"
        app:strokeWidth="0sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Generate"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginHorizontal="20sp"
        android:layout_marginVertical="20sp"
        app:cardBackgroundColor="@color/boardColor"
        app:cardCornerRadius="18sp"
        app:layout_constraintBottom_toTopOf="@id/generateBtn"
        app:layout_constraintTop_toBottomOf="@id/backBtn"
        app:strokeWidth="0sp">

        <EditText
            android:id="@+id/userText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/boardColor"
            android:gravity="start"
            android:hint="Type youe text here"
            android:padding="15sp"
            android:textColor="@color/white"
            android:textColorHint="#616365"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/micBtn"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/blue_circle_shape"
            android:padding="10sp"
            android:src="@drawable/mic_icon" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>